<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipCalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/check_amount_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingBottom="16dp"
                android:text="Check Amount : "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <EditText

                android:id="@+id/checkAmountValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint=""
                android:inputType="numberDecimal"
                android:paddingBottom="16dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/partySize_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingBottom="16dp"
                android:text="Party Size: "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <EditText

                android:id="@+id/partySizeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint=""
                android:inputType="number"
                android:paddingBottom="16dp"
                android:text="" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonCompute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:onClick="computeTip"
            android:paddingBottom="8dp"
            android:text="Compute Tip"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="Tips and totals (Per Person)"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:text="Tip 15%: "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <EditText

                android:id="@+id/fifteenPercentTipValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:inputType="number"
                android:paddingBottom="16dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:text=" 20%: "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <EditText

                android:id="@+id/twentyPercentTipValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:inputType="number"
                android:paddingBottom="16dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:text="25%: "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <EditText

                android:id="@+id/twentyfivePercentTipValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:inputType="number"
                android:paddingBottom="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:text="Total 15%: "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <EditText

                android:id="@+id/fifteenPercentTotalValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:inputType="number"
                android:paddingBottom="16dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:text=" 20%: "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <EditText

                android:id="@+id/twentyPercentTotalValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:inputType="number"
                android:paddingBottom="16dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:text="25%: "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <EditText

                android:id="@+id/twentyfivePercentTotalValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:inputType="number"
                android:paddingBottom="16dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
